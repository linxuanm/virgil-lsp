}
class ServerInfo extends OutgoingData {
	var name: string;
	var version: string; // nullable
	def serialize() -> JsonValue {
		var b = JsonBuilder.new().str("name", name);
		if (version != null) b.str("version", version);
		return b.build();
	}
	def logContent(log: Logger, depth: int) {
		
	}
}
